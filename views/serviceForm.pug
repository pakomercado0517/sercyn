extends layout

block serviceForm
  .container-fluid
    .row.service_form
      .col-sm-12.mt-8.mx-auto
        form(action='/serviceForm/service/operar', method='POST')
          input(type='hidden', name='_id', value=_id)
          .form-group
            label(for='name') Nombres
            input.form-control(type='text', name='name', id='name', value=name)
          .form-group
            label(for='lastName') Apellidos
            input.form-control(type='text', name='lastName', id='lastName', value=lastName)
          .form-group
            label(for='persons') NÃºmero de personas a bordo
            input.form-control(type='number', id='persons', name='persons', value=persons)
          .form-group
            label(for='date')
            input.form-control(type='date', id='date', name='date', required pattern='[0-9]{4}-[0-9]{2}-[0-9]{2}', value=date)
          .form-group
            label(for='observations') Observaciones
            textarea.form-control#observations(rows='3',name='observations')
          button.btn.btn-primary(type='submit') Aceptar
          a.btn.btn-danger(href='/service') Cancelar
