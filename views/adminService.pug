extends layout

block adminService
  .container-fluid
    .row
      .col-sm-12.mx-auto
        h3.text-center
          span.fa.fa-list-alt
            |  Lista de Servicios
        br
        a.btn.btn-primary(href='/service/nuevo')
          span.fa.fa-plus-square
            |  Nuevo
        #service
          table.table.table-striped
            thead
              tr
                th Nombre Representante
                th Personas a bordo
                th Fecha
                th(colspan='2') Operaci√≥n
            each item in services
              tr
                td.text-center= item.name+' '+item.lastName
                td.text-center= item.persons
                td.text-center= item.date
                td
                  a(href='/service/modificar/'+item._id)
                    | Modificar
                td
                  a(href='/service/eliminar/'+item._id)
                    | Eliminar
          a.btn.btn-danger(href='/logout')
            span.fa.fa-sign-out-alt
             |  Salir